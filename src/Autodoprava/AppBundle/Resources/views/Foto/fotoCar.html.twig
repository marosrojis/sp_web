{% extends "AutodopravaAppBundle::adminLayout.html.twig" %}

{% block content %}
<div class="container-fluid">
	<div class="row">
		<div class="col-md-10 col-md-offset-2 text-left">
			<h1>{% block title %}Editace fotek - {{ carName }}{% endblock %}</h1>
		</div>
	</div>
	<div class="row">
		<div class="line_gray"></div>
	</div>
	<div class="content_page">
		<div class="row">
			<div class="container col-md-offset-1">
				{% for foto in fotos %}
				<div class="col-md-3 text-center">
					<div class="row">
						<img src="{{ asset('bundles/app/img/cars/') }}{{ foto.soubor }}" width="250" height="150">
					</div>
					<div class="row fotoDetail">
						<a href="{{ path('delete_foto', {'id': foto.id_foto}) }}" onclick="return confirm('Opravdu chcete smazat tuto fotku?')"><span class="glyphicon glyphicon-trash" style="font-size: 14pt"></span></a>
					</div>
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>

{% endblock %}
