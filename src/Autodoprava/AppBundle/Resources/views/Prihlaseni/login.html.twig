{% extends "AutodopravaAppBundle::layout.html.twig" %}

{% block content %}
<div class="container-fluid">
	<div class="row">
		<div class="col-md-10 col-md-offset-2 text-left">
			<h1>{% block title %}Přihlášení{% endblock %}</h1>
		</div>
	</div>
	<div class="row">
		<div class="line_gray"></div>
	</div>
	<div class="content_page">
		<div class="row">
			<div class="container col-md-6 col-md-offset-2">
				{% if error %}
				<div class="alert alert-danger" role="alert">
					{% if error.message == "Bad credentials" %}
						Zadali jste neplatné přihlašovací údaje
					{% else %}
						{{ error.message }}
					{% endif %}
				</div>
				{% endif %}
				<form action="{{ path('login_check') }}" method="post" class="form-horizontal" role="form">
					<div class="form-group">
						<label for="username" class="col-sm-2 control-label">Login:</label>
						<div class="col-sm-4">
							<input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" placeholder="Login"/>
						</div>
					</div>
					<div class="form-group">
						<label for="password" class="col-sm-2 control-label">Heslo:</label>
						<div class="col-sm-4">
							<input type="password" id="password" name="_password" class="form-control" placeholder="Heslo"/>
						</div>
					</div>
					<input type="hidden" name="_target_path" value="/admin" />
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-4">
							<button type="submit" class="btn btn-default">Přihlásit se</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

{% endblock %}