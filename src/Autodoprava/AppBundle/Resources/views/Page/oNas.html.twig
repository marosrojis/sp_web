{% extends "AutodopravaAppBundle::adminLayout.html.twig" %}
{% block javascripts %}
<script type="text/javascript" src="{{asset('bundles/app/js/tinymce/tiny_mce.js')}}"></script>
<script type="text/javascript" src="{{asset('bundles/app/js/tinymce/script.js')}}"></script>
<script type="text/javascript">
	tinymce.init({
		selector: "textarea",
		width: "100%",
		height: "300",
	});
</script>

{% endblock %}

{% block content %}
<div class="container-fluid">
	<div class="row">
		<div class="col-md-10 col-md-offset-2 text-left">
			<h1>{% block title %}Editace - O n√°s{% endblock %}</h1>
		</div>
	</div>
	<div class="row">
		<div class="line_gray col-md-12"></div>
	</div>
	<div class="content_page">
		<div class="row">
			<div class="container col-md-offset-2 col-md-8">
				<form method="POST" id="content">
					{{ form_errors(form) }}
					<div class="row">
					{{ form_errors(form.obsah) }}
					{{ form_widget(form.obsah) }} <br>
					</div>
					{{ form_rest(form) }}
					<div class="form-group">
						<div class="col-sm-offset-1 col-sm-2">
							<button type="submit" class="btn btn-default">Editovat</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

{% endblock %}
