{% extends "AutodopravaAppBundle::layout.html.twig" %}

{% block content %}
<script>
	$(document).ready(function(){
		$('.bxslider').bxSlider({
			mode: 'fade',
			captions: true,	
			slideWidth: 420,
			auto: true
		});
	});
</script>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-10 col-md-offset-2 text-left">
			<h1>{% block title %}{{ name }}{% endblock %}</h1>
		</div>
	</div>
	<div class="row">
		<div class="line_gray"></div>
	</div>
	<div class="content_page">
		<div class="row">
			<div class="cars_info col-md-3 col-md-offset-1">
				{% for car in cars %}
				<h3>{{ car.nazev }}</h3>
				<ul>
					{% if car.objem != NULL %}
						<li>objem přepravní plochy: {{ car.objem }}</li>
					{% endif %}
					{% if car.nosnost != NULL %}
						<li>nosnost: {{ car.nosnost }}</li>
					{% endif %}
					{% if car.pocet != NULL %}
						<li>počet vozů: {{ car.pocet }}x</li>
					{% endif %}
					{% if car.vybaveni != NULL %}
						<li>vybavení: {{ car.vybaveni }}</li>
					{% endif %}
					{% if car.pocet_sezeni != NULL %}
						<li>počet míst k sezení: {{ car.pocet_sezeni }}</li>
					{% endif %}
					{% if car.technika != NULL %}
						<li>technika: {{ car.technika }}</li>
					{% endif %}
					{% if car.delka_plochy != NULL %}
						<li>délka plochy: {{ car.delka_plochy }}</li>
					{% endif %}
					{% if car.cena != NULL %}
						<li>cena: {{ car.cena }},- / 1 km</li>
					{% endif %}


				</ul>
				<a class="btn btn-primary" href="{{ path('_objednavka', {'transport': idTransport, 'car': car.id_auta}) }}" role="button">Objednat</a><br><br>
				{% endfor %}
			</div>
			<div class="col-md-4 col-md-offset-3">
				<ul class="bxslider">
					{% for foto in fotos %}
					<li><img src="{{ asset('bundles/app/img/cars/') }}{{ foto.soubor }}" title="{{ foto.nazev }}" alt="{{ foto.nazev }}"/></li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
</div>

{% endblock %}
